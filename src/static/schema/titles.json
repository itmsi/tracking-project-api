					"per_page": {
						"type": "integer",
						"description": "Number of items per page"
					},
					"total": {
						"type": "integer",
						"description": "Total number of records"
					},
					"total_pages": {
						"type": "integer",
						"description": "Total number of pages"
					},
					"has_next_page": {
						"type": "boolean",
						"description": "Whether there is a next page"
					},
					"has_prev_page": {
						"type": "boolean",
						"description": "Whether there is a previous page"
					}
				}
			}
		}
	},
	"SchemaPostTitlesGet": {
		"type": "object",
		"properties": {
			"page": {
				"type": "integer",
				"default": 1,
				"minimum": 1,
				"description": "Page number for pagination"
			},
			"limit": {
				"type": "integer",
				"default": 10,
				"minimum": 1,
				"maximum": 100,
				"description": "Number of items per page (max 100)"
			},
			"search": {
				"type": "string",
				"description": "Search term for title name"
			},
			"sort_by": {
				"type": "string",
				"enum": ["title_name", "department_id", "created_at", "updated_at"],
				"default": "title_name",
				"description": "Column to sort by"
			},
			"sort_order": {
				"type": "string",
				"enum": ["asc", "desc"],
				"default": "asc",
				"description": "Sort order"
			},
			"title_name": {
				"type": "string",
				"description": "Filter by title name"
			},
			"department_id": {
				"type": "string",
				"format": "uuid",
				"description": "Filter by department ID"
			},
			"department_name": {
				"type": "string",
				"description": "Filter by department name"
			},
			"created_by": {
				"type": "string",
				"format": "uuid",
				"description": "Filter by creator user ID"
			},
			"updated_by": {
				"type": "string",
				"format": "uuid",
				"description": "Filter by updater user ID"
			},
			"is_delete": {
				"type": "boolean",
				"default": false,
				"description": "Filter by deletion status"
			},
			"start_date": {
				"type": "string",
				"format": "date-time",
				"description": "Filter titles created from this date (ISO 8601 format)"
			},
			"end_date": {
				"type": "string",
				"format": "date-time",
				"description": "Filter titles created until this date (ISO 8601 format)"
			}
		},
		"example": {
