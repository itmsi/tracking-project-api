				"maxLength": 100
			},
			"department_id": {
				"type": "string",
				"format": "uuid"
			}
		},
		"required": ["title_name", "department_id"]
	},
	"SchemaPutTitles": {
		"type": "object",
		"properties": {
			"title_name": {
				"type": "string",
				"minLength": 2,
				"maxLength": 100
			},
			"department_id": {
				"type": "string",
				"format": "uuid"
			}
		}
	},
	"SchemaResponseTitlesList": {
		"type": "object",
		"properties": {
			"data": {
				"type": "array",
				"items": {
					"$ref": "#/components/schemas/SchemaResponseTitles"
				}
			},
			"pagination": {
				"type": "object",
				"properties": {
					"current_page": {
						"type": "integer",
