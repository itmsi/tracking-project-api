{
  "/auth/sso/profil": {
    "get": {
      "tags": ["SSO Profile"],
      "summary": "Get User Profile",
      "description": "Mendapatkan data profil user yang sedang login melalui SSO",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Profil berhasil diambil",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaResponseSSOProfile"
              }
            }
          }
        },
        "401": {
          "description": "User tidak terautentikasi",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "404": {
          "description": "Profil user tidak ditemukan",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "Terjadi kesalahan server",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    },
    "put": {
      "tags": ["SSO Profile"],
      "summary": "Update Employee Profile",
      "description": "Update data profil employee, password, dan upload foto profil",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "$ref": "#/components/schemas/SchemaPostSSOProfileUpdateCombined"
            }
          },
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SchemaPostSSOProfileUpdateCombined"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Profil berhasil diupdate",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaResponseSSOProfile"
              }
            }
          }
        },
        "400": {
          "description": "Validasi gagal atau data tidak valid",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "401": {
          "description": "User tidak terautentikasi",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "404": {
          "description": "Profil user tidak ditemukan",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "Terjadi kesalahan server",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  }
}
