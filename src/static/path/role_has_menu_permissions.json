{
	"/role-has-menu-permissions": {
		"get": {
			"tags": [
				"Role Has Menu Permissions"
			],
			"summary": "Get all role-menu-permission relationships with filtering, pagination, and sorting",
			"security": [
				{
					"bearerAuth": []
				}
			],
			"parameters": [
				{
					"name": "page",
					"in": "query",
					"required": false,
					"schema": {
						"type": "integer",
						"minimum": 1,
						"default": 1
					},
					"description": "Page number for pagination"
				},
				{
					"name": "limit",
					"in": "query",
					"required": false,
					"schema": {
						"type": "integer",
						"minimum": 1,
						"maximum": 100,
						"default": 10
					},
					"description": "Number of items per page (max 100)"
				},
				{
					"name": "sort_by",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"enum": ["role_name", "menu_name", "permission_name", "created_at", "updated_at"],
						"default": "created_at"
					},
					"description": "Column to sort by"
				},
				{
					"name": "sort_order",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"enum": ["asc", "desc"],
						"default": "desc"
					},
					"description": "Sort order (asc or desc)"
				},
				{
					"name": "search",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string"
					},
					"description": "Search term for role_name, menu_name, or permission_name (case-insensitive)"
				},
				{
					"name": "role_id",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Filter by role ID"
				},
				{
					"name": "menu_id",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Filter by menu ID"
				},
				{
					"name": "permission_id",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Filter by permission ID"
				},
				{
					"name": "start_date",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"format": "date"
					},
					"description": "Filter by creation date (from)"
				},
				{
					"name": "end_date",
					"in": "query",
					"required": false,
					"schema": {
						"type": "string",
						"format": "date"
					},
					"description": "Filter by creation date (to)"
				}
			],
			"responses": {
				"200": {
					"description": "OK",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaRoleHasMenuPermissionsPaginatedResponse"
							}
						}
					}
				},
				"500": {
					"description": "Internal Server Error",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				}
			}
		}
	},
	"/role-has-menu-permissions/{role_id}/{menu_id}/{permission_id}": {
		"put": {
			"tags": [
				"Role Has Menu Permissions"
			],
			"summary": "Grant or revoke a role-menu-permission relationship",
			"description": "Set permission_status to true to grant permission (insert), false to revoke permission (delete)",
			"security": [
				{
					"bearerAuth": []
				}
			],
			"parameters": [
				{
					"in": "path",
					"name": "role_id",
					"required": true,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Role ID"
				},
				{
					"in": "path",
					"name": "menu_id",
					"required": true,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Menu ID"
				},
				{
					"in": "path",
					"name": "permission_id",
					"required": true,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Permission ID"
				}
			],
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/SchemaUpdateRoleHasMenuPermission"
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "Permission revoked successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponse"
							}
						}
					}
				},
				"201": {
					"description": "Permission granted successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaResponse"
							}
						}
					}
				},
				"400": {
					"description": "Bad Request - Invalid permission_status value",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				},
				"404": {
					"description": "Not Found - Relationship not found when trying to revoke",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				},
				"409": {
					"description": "Conflict - Relationship already exists when trying to grant",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				},
				"500": {
					"description": "Internal Server Error",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				}
			}
		}
	},
	"/role-has-menu-permissions/role/{role_id}": {
		"get": {
			"tags": [
				"Role Has Menu Permissions"
			],
			"summary": "Get all menus with permissions and their status for a specific role",
			"description": "Returns all menus with their available permissions and whether the role has each permission (true/false)",
			"security": [
				{
					"bearerAuth": []
				}
			],
			"parameters": [
				{
					"in": "path",
					"name": "role_id",
					"required": true,
					"schema": {
						"type": "string",
						"format": "uuid"
					},
					"description": "Role ID"
				}
			],
			"responses": {
				"200": {
					"description": "OK",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaRoleMenusWithPermissionsResponse"
							}
						}
					}
				},
				"500": {
					"description": "Internal Server Error",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				}
			}
		}
	}
}
