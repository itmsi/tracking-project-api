{
	"/menus/get": {
		"post": {
			"tags": [
				"Menus"
			],
			"summary": "Get all menus with filtering, pagination, and sorting (via request body)",
			"security": [
				{
					"bearerAuth": []
				}
			],
			"requestBody": {
				"required": false,
				"content": {
					"application/json": {
						"schema": {
							"type": "object",
							"properties": {
								"page": {
									"type": "integer",
									"minimum": 1,
									"default": 1,
									"description": "Page number for pagination"
								},
								"limit": {
									"type": "integer",
									"minimum": 1,
									"maximum": 100,
									"default": 10,
									"description": "Number of items per page (max 100)"
								},
								"sort_by": {
									"type": "string",
									"enum": ["menu_name", "menu_order", "created_at", "updated_at"],
									"default": "menu_order",
									"description": "Column to sort by"
								},
								"sort_order": {
									"type": "string",
									"enum": ["asc", "desc"],
									"default": "asc",
									"description": "Sort order (asc or desc)"
								},
								"search": {
									"type": "string",
									"description": "Search term for menu_name and menu_url (case-insensitive)"
								},
								"menu_name": {
									"type": "string",
									"description": "Filter by exact menu name"
								},
								"system_id": {
									"type": "string",
									"format": "uuid",
									"description": "Filter by system ID"
								}
							}
						},
						"example": {
							"page": 1,
							"limit": 10,
							"sort_by": "menu_order",
							"sort_order": "asc",
							"search": "",
							"menu_name": "",
							"system_id": ""
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "OK",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaMenusPaginatedResponse"
							}
						}
					}
				},
				"500": {
					"description": "Internal Server Error",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaErrorResponse"
							}
						}
					}
				}
			}
		}
	},
