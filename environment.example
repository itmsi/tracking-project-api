# Express.js API Boilerplate Configuration
# Copy this file to .env and update values accordingly

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=API Boilerplate
APP_PORT=3000
NODE_ENV=development
HOST=localhost
APP_BASE_URL=http://localhost:3000

# ===========================================
# Database Configuration
# ===========================================
DB_CLIENT_DEV=pg
DB_CLIENT_PROD=pg
DB_CLIENT_TEST=pg

# Development Database
DB_HOST_DEV=localhost
DB_PORT_DEV=5432
DB_USER_DEV=postgres
DB_PASS_DEV=your_password
DB_NAME_DEV=your_database_dev

# Production Database
DB_HOST_PROD=localhost
DB_PORT_PROD=5432
DB_USER_PROD=postgres
DB_PASS_PROD=your_password
DB_NAME_PROD=your_database_prod

# Test Database
DB_HOST_TEST=localhost
DB_PORT_TEST=5432
DB_USER_TEST=postgres
DB_PASS_TEST=your_password
DB_NAME_TEST=your_database_test

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SSO Configuration (Optional)
# ===========================================
# Uncomment and configure if using SSO
# SSO_ENABLED=false
# SSO_SERVER_URL=http://localhost:9588
# SSO_SERVER_AUTHORIZATION_URL=http://localhost:9588/api/v1/auth/sso/authorize
# SSO_SERVER_TOKEN_URL=http://localhost:9588/api/v1/auth/sso/token
# SSO_SERVER_USERINFO_URL=http://localhost:9588/api/v1/auth/sso/userinfo
# SSO_SERVER_LOGOUT_URL=http://localhost:9588/api/v1/auth/sso/logout
# SSO_CLIENT_ID=your-client-id
# SSO_CLIENT_SECRET=your-client-secret
# SSO_CLIENT_REDIRECT_URI=http://localhost:3000/api/v1/auth/sso/callback
# SSO_CLIENT_SCOPES=read,write,profile,email
# SSO_CLIENT_RESPONSE_TYPE=code
# SSO_CLIENT_GRANT_TYPE=authorization_code

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_COOKIE_NAME=api_session
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ===========================================
# CORS Configuration
# ===========================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_ENABLED=true
LOG_FILE_ENABLED=true
LOG_DIRECTORY=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=10MB

# ===========================================
# Email Configuration (Optional)
# ===========================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_DIRECTORY=./uploads

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# ===========================================
# Monitoring Configuration
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9091

# ===========================================
# Prometheus Configuration (Optional)
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_SERVER_URL=http://localhost:9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_JOB_NAME=api-boilerplate

# ===========================================
# Development/Testing Configuration
# ===========================================
DEBUG_ENABLED=true
SWAGGER_ENABLED=development
API_DOCUMENTATION_URL=http://localhost:3000/documentation

# ===========================================
# Default Admin User (Development Only)
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# RabbitMQ Configuration (Optional)
# ===========================================
RABBITMQ_ENABLED=false
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_NAME=api-queue

# ===========================================
# MinIO Configuration (Optional)
# ===========================================
S3_PROVIDER=minio
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true
S3_SSL_ENABLED=false
S3_SIGNATURE_VERSION=v4

# ===========================================
# AWS S3 Configuration (Optional)
# ===========================================
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ===========================================
# Application URLs
# ===========================================
API_BASE_URL=http://localhost:3000/api/v1
FRONTEND_URL=http://localhost:3000

# ===========================================
# Localization Configuration
# ===========================================
TIMEZONE=Asia/Jakarta
DATE_FORMAT=YYYY-MM-DD
DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss
DEFAULT_LANGUAGE=id
SUPPORTED_LANGUAGES=id,en

# ===========================================
# Pagination Configuration
# ===========================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ===========================================
# Cache Configuration (Optional)
# ===========================================
CACHE_ENABLED=false
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# Google reCAPTCHA (Optional)
# ===========================================
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_VERIFY_URL=https://www.google.com/recaptcha/api/siteverify

# ===========================================
# APM Configuration (Optional)
# ===========================================
APM_ENABLED=false
APM_SERVER_URL=http://localhost:8200
APM_SERVICE_NAME=api-boilerplate
APM_ENVIRONMENT=development
